---
import { getCollection } from "astro:content";
import TagFilter from "@/components/TagFilter.astro";
import PageLayout from "@/layouts/Base.astro";
import { filterConfig } from "@/site.config";

// get all project index files (folders with index.md)
// index files have IDs like 'azem', 'learning-zig' (no slash)
// article files have IDs like 'learning-zig/base64', 'echo/rv32-on-zybo' (with slash)
const all_proj = await getCollection("proj");
const projects = all_proj
	.filter((entry) => !entry.id.includes("/"))
	.filter((entry) => import.meta.env.DEV || entry.data.status !== "draft")
	.map((entry) => ({
		...entry,
		slug: entry.id,
	}))
	.sort((a, b) => {
		// sort by start date if available, otherwise by title
		if (a.data.startDate && b.data.startDate) {
			return b.data.startDate.getTime() - a.data.startDate.getTime();
		}
		return a.data.title.localeCompare(b.data.title);
	});

// collect all unique tags from projects and count usage
const tag_counts: Record<string, number> = {};
projects.forEach((project) => {
	(project.data.tags || []).forEach((tag) => {
		tag_counts[tag] = (tag_counts[tag] || 0) + 1;
	});
});

const all_tags = Object.keys(tag_counts);

const meta = {
	description: "collection of projects, experiments, and learning journeys",
	title: "projects",
};
---

<PageLayout meta={meta} pageType="listing">
	<h1 class="title mb-6">projects</h1>
	{all_tags.length > 0 && (
		<TagFilter
			all_tags={all_tags}
			min_usage={filterConfig.min_tag_usage}
			tag_counts={tag_counts}
		/>
	)}

	<div class="projects-grid">
		{
			projects.map((project) => (
				<article
					class="card group relative"
					data-filterable-item
					data-tags={(project.data.tags || []).join(",")}
				>
					<a class="card-link block pb-8 p-4" href={`/projects/${project.slug}/`}>
						<div class="mb-2 flex items-start justify-between gap-2">
							<h2 class="card-title text-xl font-semibold">
								{project.data.title}
							</h2>
							{project.data.status && (
								<span class={`status-${project.data.status} rounded-md px-3 py-1 text-xs font-medium`}>
									{project.data.status}
								</span>
							)}
						</div>

						{project.data.description && (
							<p class="card-text mb-3 line-clamp-2 text-sm">{project.data.description}</p>
						)}

						{project.data.tags && project.data.tags.length > 0 && (
							<div class="mb-3 flex flex-wrap gap-2 overflow-hidden" style="max-height: 1.75rem;">
								{project.data.tags.map((tag) => (
									<span class="card-badge px-2 py-0.5 text-xs whitespace-nowrap">#{tag}</span>
								))}
							</div>
						)}

						<svg
							aria-hidden="true"
							class="text-accent absolute bottom-4 right-4 h-5 w-5 transition-transform group-hover:translate-x-1"
							fill="none"
							stroke="currentColor"
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width="2"
							viewBox="0 0 24 24"
							xmlns="http://www.w3.org/2000/svg"
						>
							<path d="M5 12h14M12 5l7 7-7 7" />
						</svg>
					</a>
					{project.data.demoLink && (
						<a
							class="hover:text-accent absolute bottom-4 left-4 transition-colors z-10 project-action-link"
						href={project.data.demoLink}
						rel="noopener noreferrer"
						target="_blank"
						>
							<svg
								aria-hidden="true"
								class="h-5 w-5"
								fill="none"
								stroke="currentColor"
								viewBox="0 0 24 24"
								xmlns="http://www.w3.org/2000/svg"
							>
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
							</svg>
							<span class="sr-only">view demo</span>
						</a>
					)}
					{project.data.github && (
						<a
							class="hover:text-accent absolute transition-colors z-10 project-action-link"
							class:list={[
								project.data.demoLink ? "bottom-4 left-11" : "bottom-4 left-4"
							]}
						href={project.data.github}
						rel="noopener noreferrer"
						target="_blank"
						>
							<svg
								aria-hidden="true"
								class="h-5 w-5"
								fill="currentColor"
								viewBox="0 0 24 24"
								xmlns="http://www.w3.org/2000/svg"
							>
								<path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
							</svg>
							<span class="sr-only">view on github</span>
						</a>
					)}
				</article>
			))
		}
	</div>

	{
		projects.length === 0 && (
			<p class="text-center text-sm text-zinc-600 dark:text-zinc-400">
				no projects found. create a folder in <code>src/content/proj</code> with an <code>
					index.md
				</code> file.
			</p>
		)
	}
</PageLayout>

<script>
	document.querySelectorAll(".project-action-link").forEach((link) => {
		link.addEventListener("click", (e) => {
			e.stopPropagation();
		});
	});
</script>
