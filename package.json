{
	"name": "sooriya",
	"version": "1.3",
	"private": false,
	"scripts": {
		"build": "astro check && astro build && pagefind --site dist",
		"check": "biome check . --write && astro check",
		"check:ci": "biome check . && astro check",
		"clean": "rm -rf dist .astro",
		"dev": "astro dev",
		"preview": "astro preview",
		"validate": "bun run check && astro build",
		"worker:dev": "cd worker && bunx wrangler dev",
		"worker:db:init": "cd worker && bunx wrangler d1 execute DB --local --file=src/db/schema.sql",
		"worker:db:reset": "cd worker && rm -rf .wrangler && bunx wrangler d1 execute DB --local --file=src/db/schema.sql"
	},
	"dependencies": {
		"@astrojs/markdown-remark": "6.3.8",
		"@astrojs/mdx": "4.3.9",
		"@astrojs/rss": "4.0.13",
		"@astrojs/sitemap": "3.6.0",
		"@tailwindcss/vite": "^4.1.16",
		"astro": "5.15.2",
		"astro-expressive-code": "^0.41.3",
		"astro-font": "^1.1.0",
		"astro-icon": "^1.1.5",
		"astro-robots-txt": "^1.0.0",
		"astro-webmanifest": "^1.0.0",
		"cssnano": "^7.1.2",
		"hastscript": "^9.0.1",
		"mdast-util-directive": "^3.1.0",
		"mdast-util-to-markdown": "^2.1.2",
		"mdast-util-to-string": "^4.0.0",
		"ms": "^2.1.3",
		"rehype-autolink-headings": "^7.1.0",
		"rehype-external-links": "^3.0.0",
		"rehype-mathjax": "^7.1.0",
		"rehype-unwrap-images": "^1.0.0",
		"remark-directive": "^4.0.0",
		"remark-math": "^6.0.0",
		"satori": "0.18.3",
		"satori-html": "^0.3.2",
		"sharp": "^0.34.4",
		"unified": "^11.0.5",
		"unist-util-visit": "^5.0.0"
	},
	"devDependencies": {
		"@astrojs/check": "0.9.5",
		"@biomejs/biome": "^2.3.2",
		"@iconify-json/mdi": "^1.2.3",
		"@iconify-json/ri": "^1.2.6",
		"@pagefind/default-ui": "^1.4.0",
		"@resvg/resvg-js": "^2.6.2",
		"@tailwindcss/typography": "^0.5.19",
		"@types/hast": "^3.0.4",
		"@types/mdast": "^4.0.4",
		"pagefind": "^1.4.0",
		"reading-time": "^1.5.0",
		"tailwindcss": "^4.1.16",
		"typescript": "^5.9.3"
	},
	"resolutions": {
		"sharp": "^0.34.4"
	}
}
